<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
        android:src="@drawable/image_icon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="Student Placeholder Image" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:" />
        <TextView
            android:id="@+id/studentNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:" />
        <TextView
            android:id="@+id/studentIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:" />
        <TextView
            android:id="@+id/studentPhoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:" />
        <TextView
            android:id="@+id/studentAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Checked Status -->
        <CheckBox
            android:id="@+id/studentChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Checked"
            android:layout_marginTop="8dp" />

        <!-- Go Back Button -->
        <Button
            android:id="@+id/goBackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Go_Back"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonColor"/>
    </LinearLayout>
</ScrollView>
